<Window x:Class="ClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MainGrid">
        <TextBox HorizontalAlignment="Left" Height="38" Margin="298,26,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" Width="124" FontSize="20" FontFamily="Yu Gothic UI Semibold" TextAlignment="Center"/>
        <Button x:Name="ButtonLogin" Content="Login" HorizontalAlignment="Left" Margin="449,184,0,0" VerticalAlignment="Top" Width="75" Command="{Binding ButtonCommand}" Click="ButtonLogin_Click"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="165,123,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="165,173,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxName" HorizontalAlignment="Left" Height="23" Margin="243,126,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TextBoxPassword" HorizontalAlignment="Left" Height="23" Margin="243,181,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
